[
  {%- assign posts = site.posts -%}
  {%- for post in site.posts -%}
  {
      "title": "{{ post.title | xml_escape }}",
      "description": "{{ post.description | xml_escape }}",
      "url": "{{ post.url }}",
      "date": "{{ post.last_modified_at | date_to_xmlschema }}"
  }
  {%- unless forloop.last -%},{%- endunless -%}
  {%- endfor -%}
]
